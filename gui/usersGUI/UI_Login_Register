    private void b_RegisterUserActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_b_RegisterUserActionPerformed
        // TODO add your handling code here:
        User user = new User(tf_UserName.getText());
        userDao.addUser(user);
        JOptionPane.showMessageDialog(this, "Thank you for registering " + tf_UserName.getText()+ " !\n You can now login! ");
    }//GEN-LAST:event_b_RegisterUserActionPerformed

